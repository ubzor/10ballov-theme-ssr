{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2017",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client", "@types/jest"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./*"]
        },
        "experimentalDecorators": true
    },
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
